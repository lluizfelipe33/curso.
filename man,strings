
texto1= "String simples para teste."
print(texto1)
print(len(texto1)) # Quantidade de caracteres

texto1 = texto1.replace("simples","complexa") # Substitui 'simples' por 'complexa' no texto
print(texto1)

print(texto1.upper()) #Todas letras maiusculas

print(type(texto1)) # Tipo de uma string

print("Esse texto será " + "concatenado!") # '+' usado para cocatenação
